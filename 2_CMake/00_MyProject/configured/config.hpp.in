#pragma once

#include <cstdint>
#include <string_view>

// "@PROJECT_NAME@" is replaced by CMake with the project name set in the root CMakeLists file
// "@PROJECT_NAME@" and "@PROJECT_VERSION@" are predefined names that CMake will look for and replace with the actual values
static constexpr std::string_view project_name = "@PROJECT_NAME@";
static constexpr std::string_view project_version = "@PROJECT_VERSION@";

static constexpr std::int32_t project_version_major{@PROJECT_VERSION_MAJOR@};
static constexpr std::int32_t project_version_minor{@PROJECT_VERSION_MINOR@};
static constexpr std::int32_t project_version_patch{@PROJECT_VERSION_PATCH@};
